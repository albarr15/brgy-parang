    <div class = "page-content-container"  id="create-case-page">
        <h1 id = "tanod-case-title">Creating a New Tanod Case Record</h1>
        <div class = "form-encasing-container">
            <div class = "form-actual-container">

                {{!-- FORM --}}
                <form action="/submit-tanod-case" method="post" class="case-form">
                    <div class = "form-section" id = "basic-info">
                        <div class = "column-section">
                            <label for="entry-number-input" class ="bold-label">Entry Number</label>
                            <input class = "entry-number-input" type = "text" placeholder= "Entry Number" name="EntryNo">
                        </div>
                        <div class = "column-section">
                            <label for="date" class ="bold-label">Date</label>
                            <input type = "date" id = "dateInput" name="Date">
                        </div>
                        <div class = "column-section1">
                            <label for="case-form" class ="bold-label">Status</label>
                            <select name="Status" class="status-dropdown" selected = "1">
                                <option value="" selected hidden>Select Status</option>
                                <option value="1">Resolved</option>
                                <option value="0">Ongoing</option>
                            </select>
                        </div>
                    </div>
                    <span class = "section-name">Reportee Information</span>
                    <div class = "form-section" id = "reportee-info">
                        <div class = "input-pair">
                            <label for="last-name-input">Last Name</label>
                            <input class = "last-name-input" type ="text" placeholder="Last Name" name="reporteeLastName">
                        </div>
                        <div class = "input-pair">
                            <label for="middle-initial-input">Middle Initial</label>
                            <input class = "middle-name-input" type = "text" placeholder="M.I." maxlength="1" name="reporteeMiddleInitial">
                        </div>
                        <div class = "input-pair">
                            <label for="first-name-input">First Name</label>
                            <input class = "first-name-input" type = "text" placeholder="First Name" name="reporteeFirstName">
                        </div>
                    </div>
                    <div class="form-section" id = "reportee-additional-info">
                        <div class = "input-pair">
                            <label for="">Reportee Address</label>
                            <input class = "address-input" type = "text" placeholder="Reportee Address" name="reporteeAddress"> 
                        </div>
                    </div>
                    <span class="section-name">Nature of Blotter</span>
                    <div class = "form-section">
                        <div class = "input-pair">
                            <input class = "nature-of-blotter-input" type = "text" placeholder="Nature of Blotter" name="natureOfBlotter">
                        </div>
                    </div>
                    <span class = "section-name">Respondent Information</span>
                    <div class = "form-section" id = "respondent-info">
                        <div class = "input-pair">
                            <label for="last-name-input">Last Name</label>
                            <input class = "last-name-input" type ="text" placeholder="Last Name" name="respondentLastName">
                        </div>
                        <div class = "input-pair">
                            <label for="middle-initial-input">Middle Initial</label>
                            <input class = "middle-name-input" type = "text" placeholder="M.I." maxlength="1" name="respondentMiddleInitial">
                        </div>
                        <div class = "input-pair">
                            <label for="first-name-input">First Name</label>
                            <input class = "first-name-input" type = "text" placeholder="First Name" name="respondentFirstName">
                        </div>
                    </div>
                    <span class = "section-name">Desk Officer Information</span>

                    <div class = "form-section" id = "desk-officer-information">
                        <div class = "input-pair">
                            <label for="last-name-input">Last Name</label>
                            <input class = "last-name-input" type ="text" placeholder="Last Name" name="deskOfficerLastName">
                        </div>
                        <div class = "input-pair">
                            <label for="middle-initial-input">Middle Initial</label>
                            <input class = "middle-name-input" type = "text" placeholder="M.I." maxlength="1" name="deskOfficerMiddleInitial">
                        </div>
                        <div class = "input-pair">
                            <label for="first-name-input">First Name</label>
                            <input class = "first-name-input" type = "text" placeholder="First Name" name="deskOfficerFirstName">
                        </div>
                    </div>
                    <span class = "section-name">Witness Information</span>
                    <div class = "form-section" id = "witness-information">
                        <div class = "input-pair">
                            <label for="last-name-input">Last Name</label>
                            <input class = "last-name-input" type ="text" placeholder="Last Name" name="witnessLastName">
                        </div>
                        <div class = "input-pair">
                            <label for="middle-initial-input">Middle Initial</label>
                            <input class = "middle-name-input" type = "text" placeholder="M.I." maxlength="1" name="witnessMiddleInitial">
                        </div>
                        <div class = "input-pair">
                            <label for="first-name-input">First Name</label>
                            <input class = "first-name-input" type = "text" placeholder="First Name" name="witnessFirstName">
                        </div>
                    </div>
                    <span class ="section-name">Location</h5>
                    <div class = "form-section" id="location">
                        <div class = "input-pair">
                            <input class = "location-input" type = "text" placeholder="Location" name="location">
                        </div>
                    </div>
                </form>
            </div>  
        </div>
        
         <div class = "buttons-container">
            <button type="button" class="form-btn save"     id="create-submit-btn"> <img src="/images/form-check.png"><span>Save Changes</span></button>
            <button type="button" class="form-btn discard"  id="discardButton">     <img src="/images/form-trash.png"><span>Discard Changes</span></button>
        </div>
    </div>
</div>