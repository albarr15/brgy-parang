    <div class = "page-content-container" id="create-case-page">
        <h1 id = "lupon-case-title">Creating a New Lupon Case Record</h1>
        <div class = "form-encasing-container">
            <div class = "form-actual-container">

                {{!-- FORM --}}
                <form action="/submit-lupon-case" method="post" id="case-form" class="case-form">

                    <div class = "form-section" id = "basic-info">
                        <div class = "column-section">
                            <label for="case-title" class ="bold-label">Case Title</label>
                            <input class = "case-title-input" id="case-title" type = "text" placeholder= "Case Title" name="CaseTitle">
                        </div>
                        <div class = "column-section">
                            <label for="case-type" class ="bold-label">Case Type</label>
                            <input class="case-type-input" type = "text" id = "case-type" placeholder="Case Type" name="CaseType">
                        </div>
                        <div class = "column-section1">
                            <label for="case-form" class ="bold-label">Status</label>
                            <select name="Status" class="status-dropdown" selected = "1">
                                <option value="" selected disabled hidden>Select Status</option>
                                <option value="1">Resolved</option>
                                <option value="0">Ongoing</option>
                            </select>
                        </div>
                    </div>

                    <span class = "section-name">Respondent Information</span>
                    <div class = "form-section" id = "respondent-info">
                        <div class = "input-pair">
                            <label for="last-name-input">Last Name</label>
                            <input class = "last-name-input" type ="text" placeholder="Last Name" name="respondentLastName">
                        </div>
                        <div class = "input-pair">
                            <label for="middle-initial-input">Middle Initial</label>
                            <input class = "middle-name-input" type = "text" placeholder="M.I." maxlength="1" name="respondentMiddleInitial">
                        </div>
                        <div class = "input-pair">
                            <label for="first-name-input">First Name</label>
                            <input class = "first-name-input" type = "text" placeholder="First Name" name="respondentFirstName">
                        </div>
                    </div>

                    <span class = "section-name">Complainer Information</span>
                    <div class = "form-section" id = "complainer-info">
                        <div class = "input-pair">
                            <label for="last-name-input">Last Name</label>
                            <input class = "last-name-input" type ="text" placeholder="Last Name" name="complainerLastName">
                        </div>
                        <div class = "input-pair">
                            <label for="middle-initial-input">Middle Initial</label>
                            <input class = "middle-name-input" type = "text" placeholder="M.I." maxlength="1" name="complainerMiddleInitial">
                        </div>
                        <div class = "input-pair">
                            <label for="first-name-input">First Name</label>
                            <input class = "first-name-input" type = "text" placeholder="First Name" name="complainerFirstName">
                        </div>
                    </div>

                    <span class = "section-name">Mediation Information</span>
                    <div class = "form-section" id = "mediation-info">
                        <div class = "input-pair">
                            <label for="last-name-input">Last Name</label>
                            <input class = "last-name-input" type ="text" placeholder="Last Name" name="MediationLastName">
                        </div>
                        <div class = "input-pair">
                            <label for="middle-initial-input">Middle Initial</label>
                            <input class = "middle-name-input" type = "text" placeholder="M.I." maxlength="1" name="MediationMiddleInitial">
                        </div>
                        <div class = "input-pair">
                            <label for="first-name-input">First Name</label>
                            <input class = "first-name-input" type = "text" placeholder="First Name" name="MediationFirstName">
                        </div>
                    </div>

                    <span class = "section-name">Consilation Information</span>
                    <div class = "form-section" id = "consilation-information">
                        <div class = "input-pair">
                            <label for="last-name-input">Last Name</label>
                            <input class = "last-name-input" type ="text" placeholder="Last Name" name="ConciliationLastName">
                        </div>
                        <div class = "input-pair">
                            <label for="middle-initial-input">Middle Initial</label>
                            <input class = "middle-name-input" type = "text" placeholder="M.I." maxlength="1" name="ConciliationMiddleInitial">
                        </div>
                        <div class = "input-pair">
                            <label for="first-name-input">First Name</label>
                            <input class = "first-name-input" type = "text" placeholder="First Name" name="ConciliationFirstName">
                        </div>
                    </div>
                    <span class ="section-name">Case</span>
                    <div class = "form-section" id="location">
                        <div class = "input-pair">
                            <input class = "location-input" id="case-description" type = "text" placeholder="Case Details" name="Case">
                        </div>
                    </div>
                </form>
            </div>  
        </div>

        <div class = "buttons-container">
            <button type="button" class="form-btn save"     id="create-submit-btn-lupon">   <img src="/images/form-check.png"><span>Save Changes</span></button>
            <button type="button" class="form-btn discard"  id="discardButtonLupon">        <img src="/images/form-trash.png"><span>Discard Changes</span></button>
        </div>
    </div>
</div>